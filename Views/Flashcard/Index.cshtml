@{
    ViewData["Title"] = "Flashcard";
}

<div class="text-center">
    <h1 class="display-4">Flashcard Generator</h1>
    <p>A tool to generate flashcards. Note: PDF generation not working yet!</p>
</div>

@* <img id="preview-flashcard-image" src="#" alt="Your image previews here" /> *@

<form
  id="form-action" 
  method="post" 
  class="form-horizontal" 
  role="form"
>
  <!-- Image -->
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
      <label class="form-label">Image</label>
      <input class="form-control" type="file" id="flashcard-image" name="image" onchange="flashcardImageUpdate()">
    </div>
  </div>

  <!-- Label -->
  <div class="row justify-content-center mt-2">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
      <label class="form-label">Label</label>
      <input class="form-control" />
    </div>
  </div>

  <!-- Type -->
  <div class="row justify-content-center mt-2">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
      <label class="form-label">Type</label>
      <select class="form-select">
        <option selected value="image-text">Image and Text</option>
        <option value="image-only">Image only</option>
        <option value="two-pages">1st page: Image, 2nd page: Text</option>
      </select>
    </div>
  </div>

  <!-- Orientation -->
  <div class="row justify-content-center mt-2">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
      <label class="form-label">Orientation</label>
      <select class="form-select">
        <option selected value="portrait">Portrait</option>
        <option value="landscape">Landscape</option>
      </select>
    </div>
  </div>

  <!-- Submit -->
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
      <input type="submit" id="form-button" class="btn btn-outline-success" value="Generate PDF" />
    </div>
  </div>
</form>