@model PlaceViewModel
@{
  ViewData["Title"] = "Places";
}

<div class="text-center">
  <h1 class="display-4">Japan Tourist Spots</h1>
  <p>A list of my personal recommendations for those visiting Japan.</p>
</div>

@* <div class="text-right">
  <a asp-controller="Place" asp-action="New">Add New</a>
