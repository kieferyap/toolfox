<div class="place-controller">
  <div class="row">
    @foreach (var place in Model.PlaceList)
    {
      <div class="place col-xl-6 col-lg-6 col-sm-10 mt-5">
        <h2>
          <a href="@place.Website" target="_blank">
            @place.Title
          </a>
        </h2>
        <h5>@place.Type</h5>
        <p>@place.Notes</p>
        @* <a 
          class="btn btn-outline-secondary"
          asp-area="" 
          asp-controller="Place" 
          asp-action="Edit"
          asp-route-id="@place.Id"
        >
          <i class="bi bi-pen"></i>
        </a>
        <a
          class="btn btn-outline-secondary"
          onClick="deletePlace(@place.Id)"
        >
          <i class="bi bi-trash"></i>
        </a> *@
      </div>
    }
  </div>
</div>